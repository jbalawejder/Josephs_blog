<%= link_to 'Back to Article', article_path(@article), class: 'btn btn-link' %>

<% if @article.errors.any? %>
<ul>
  <% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @article do |f| %>
  <%= f.label :title %>
  <br>
  <%= f.text_field :title %>
  <br>
  <%= f.label :body %>
  <br>
  <%= f.text_area :body, size: "60x12" %>
  <br>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name, label: "Choose Category" %>
  <br>
  <%= f.submit "Update Article", class: "btn btn-primary btn-xs" %>
  <% end %>
