<% if @category.errors.any? %>
<ul>
  <% @category.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @category do |f| %>
  <%= f.label :name %>
  <br>
  <%= f.text_field :name %>
  <br>
  <br>
<%= f.submit "Create Category", class: "btn btn-primary btn-xs" %>
<% end %>
